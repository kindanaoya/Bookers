<p id ='notice'></p>
<h1>Books</h1>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
      
    </tr>
  </thead>
 
  <tbody>
   

    <tr>
      <% @books.each do |book| %>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
      <td>
        <a class="show" href="/books/show">Show</a>
      </td>
      <td>
        <a class="edit" href="/books//edit">Edit</a>
      </td>
      <td>
        <a data-confirm="Are you sure?" class="destroy" rel="nofollow" data-method="delete" href="/books">Destroy</a>
      </td>
      <% end %>
    </tr>
  </tbody>
</table>



